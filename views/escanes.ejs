<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Escaneos - Mascota <%= id %> - PetQR</title>
  <style>
    table { border-collapse: collapse; width: 100%; }
    th, td { border: 1px solid #ccc; padding: 8px; }
    th { background-color: #f2f2f2; }
  </style>
</head>
<body>
  <h1>Historial de escaneos - Mascota <%= id %></h1>
  <table>
    <thead>
      <tr>
        <th>Fecha y hora</th>
        <th>IP</th>
        <th>User Agent</th>
      </tr>
    </thead>
    <tbody>
      <% logs.forEach(log => { %>
        <tr>
          <td><%= new Date(log.timestamp).toLocaleString() %></td>
          <td><%= log.ip %></td>
          <td><%= log.user_agent %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <p><a href="/admin?clave=admin123">Volver al panel</a></p>
</body>
</html>
